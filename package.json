{
  "name": "zundoko-kiyoshi-ts",
  "version": "1.0.0",
  "description": "俗に言う「ズンドコキヨシ」ロジックのTypeScript版。",
  "main": "index.js",
  "directories": {
    "main": "src/main",
    "test": "src/test"
  },
  "scripts": {
    "postinstall": "cd src && typings install",
    "clean": "find -E . -regex './src/.+\\.(js|map)$' -type f | xargs rm && rm -rf ./build",
    "pretest": "tsc",
    "test": "istanbul cover _mocha -- ./src/test/*.test.js",
    "posttest": "cd coverage && remap-istanbul -i coverage.json -o html-report -t html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Remote-Pairpro/zundoko-kiyoshi-ts.git"
  },
  "author": "@kazuhito_m",
  "devDependencies": {
    "gulp": "^3.9.1",
    "gulp-typescript": "^2.12.1",
    "intelli-espower-loader": "^1.0.1",
    "istanbul": "^0.4.2",
    "mocha": "^2.4.5",
    "power-assert": "^1.3.1",
    "remap-istanbul": "^0.5.1"
  }
}
